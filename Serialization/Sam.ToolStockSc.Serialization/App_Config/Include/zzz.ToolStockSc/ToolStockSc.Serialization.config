<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <unicorn>
      <configurations>
        <configuration name="Sam.ToolStockSc.Serialization">
          <targetDataStore physicalRootPath="c:\Sam\ToolStockSc\Serialization\Sam.ToolStockSc.Serialization\serialized\Sam"
                           useDataCache="false"
                           type="Rainbow.Storage.SerializationFileSystemDataStore, Rainbow"
                           singleInstance="true"/>
          <predicate>

            <!-- Master db: Content -->
            <!--<include name="Content.Sam" database="master" path="/sitecore/content/sam" />-->
            <include name="Content" database="master" path="/sitecore/content" />

            <!-- Master db: Templates, Renderings, Placeholders, Layouts, Branches, Facets -->
            <include name="Templates.Foundation" database="master" path="/sitecore/templates/Foundation/ToolStockSc" />
            <include name="Templates.Feature" database="master" path="/sitecore/templates/Feature/Components" />
            <include name="Templates.Project" database="master" path="/sitecore/templates/Project" />
            <include name="Placeholders.Feature" database="master" path="/sitecore/layout/Placeholder Settings/Feature/ToolStockSc" />
            <include name="Placeholders.Foundation" database="master" path="/sitecore/layout/Placeholder Settings/Foundation/ToolStockSc" />
            <include name="Placeholders.Project" database="master" path="/sitecore/layout/Placeholder Settings/Project/ToolStockSc" />
            <include name="Renderings.Feature" database="master" path="/sitecore/layout/Renderings/Feature/ToolStockSc" />
            <include name="Renderings.Foundation" database="master" path="/sitecore/layout/Renderings/Foundation/ToolStockSc" />
            <include name="Renderings.Project" database="master" path="/sitecore/layout/Renderings/Project/ToolStockSc" />
            <include name="MediaLibrary" database="master" path="/sitecore/media library/Images" />
            <include name="MediaLibrary.Project" database="master" path="/sitecore/media library/Project/ToolStockSc" />
            <include name="Branches.Project" database="master" path="/sitecore/templates/Branches/Project" />
            <include name="System.Modules.PowerShell.ScriptLibrary" database="master" path="/sitecore/system/Modules/PowerShell/Script Library/Custom Scripts" />
            <include name="System.Settings.Buckets.Facets" database="master" path="/sitecore/system/Settings/Buckets/Facets/Custom Facets" />

            <!-- Core db: Ribbons -->

            <include name="Templates.System.Security" database="core" path="/sitecore/templates/System/Security"/>
            <include name="System.Settings.Security.Profiles" database="core" path="/sitecore/system/Settings/Security/Profiles"/>
            <include name="Applications.WebEdit.EditFrameButtons" database="core" path="/sitecore/content/Applications/WebEdit/Edit Frame Buttons/ToolStockSc"/>

          </predicate>
        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>