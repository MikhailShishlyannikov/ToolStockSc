@model Sam.ToolStockSc.Web.Areas.Project.ToolStockSc.Models.ViewModels.NavLinkViewModel
@using Glass.Mapper.Sc.Web.Mvc

<li>
    @if (Sitecore.Context.PageMode.IsExperienceEditorEditing)
    {
        if (Model.Icon != null && Model.Link != null)
        {
            <a class="nav-link" style="display: inline-block" href=@Model.Link.Url>@Html.Raw(Model.Icon)</a>@Html.Glass().Editable(m => m.Link)
        }
        else
        {
            @Html.Glass().Editable(m => m.Link)
        }

    }
    else
    {
        <a class="nav-link" href=@Model.Link.Url>@Html.Raw(Model.Icon) @Model.Link.Text</a>
    }
</li>
