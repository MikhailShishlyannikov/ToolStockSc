<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
  <sitecore role:require="Standalone or ContentManagement">
    <unicorn>
      <configurations>
        <configuration name="Sam.Feature.Card" description="Feature Card" dependencies="Foundation.*">
          <predicate>
            <include name="Templates" database="master" path="/sitecore/templates/Feature/Card" />
            <include name="Renderings" database="master" path="/sitecore/layout/Renderings/Feature/Card" />
            <include name="Layouts" database="master" path="/sitecore/layout/Placeholder Settings/Feature/Card" />
          </predicate>
        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>
